  <script>
    // Datos para los gráficos
    const probabilidadData = {
      labels: ["Alta", "Media", "Baja"],
      datasets: [{
        label: "Cantidad de Riesgos",
        data: [2, 2, 1],
        backgroundColor: ["#ff4d4d", "#ffb84d", "#4d79ff"],
      }]
    };

    const impactoData = {
      labels: ["Alto", "Medio", "Bajo"],
      datasets: [{
        label: "Impacto de Riesgos",
        data: [3, 2, 0],
        backgroundColor: ["#e74c3c", "#f1c40f", "#2ecc71"],
      }]
    };

    new Chart(document.getElementById("chartProbabilidad"), {
      type: "pie",
      data: probabilidadData,
    });

    new Chart(document.getElementById("chartImpacto"), {
      type: "bar",
      data: impactoData,
      options: {
        scales: {
          y: { beginAtZero: true }
        }
      }
    });
  </script>
